/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@features/*": ["src/app/features/*"],
      "@layout/*": ["src/app/layout/*"],
      "@components/*": ["src/app/shared/components/*"],
      "@views/*": ["src/app/views/*"],
      "@shared/*": ["src/app/shared/*"],
      "@sviews/*": ["src/styles/views/*"],
      "@slayout/*": ["src/styles/layout/*"],
      "@scomponents/*": ["src/styles/components/*"],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
